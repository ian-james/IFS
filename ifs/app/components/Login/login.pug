extends ../../shared/views/pageLayout.pug

block content
    h1.uk-text-center  Welcome to IFS!
    div(class="uk-card uk-card-default uk-card-body uk-align-center uk-width-1-2@s")
        div(ng-controller="loginCtrl")
            div(uk-alert).uk-alert-danger
                p.errorMessage #{messages.errorMessage}

            script(src="/validate/jquery.validate.min.js")
            script(src="shared/views/js/form-rules.js")
            script(src="/socket.io/socket.io.js")
            script(src="/components/InteractionEvents/EventReceivers.js")

            form(id="loginFrm" name="login" method="post" action="/login" uk-grid).uk-grid-small
                div.uk-width-1-1
                    input(type="email" name="username" placeholder="Enter email" required).uk-input#inputEmail
                div.uk-width-1-1
                    input(type="password" name="password" placeholder="Enter password" required).uk-input#pwd

                div.uk-width-1-2
                    .checkbox
                    label
                    input( id="rememberMe" type="checkbox" name="checkbox").uk-checkbox
                    |   Remember me?

                div.uk-width-1-2
                    input(type="submit" value="Login").uk-button.uk-button-default.uk-align-right

            div.forgot
                a(href="#") Forgot password?
