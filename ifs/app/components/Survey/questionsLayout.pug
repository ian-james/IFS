extends ../../shared/views/pageLayout.pug
block content   
    <div class="row" ng-controller="surveyCtrl">
        <div class="col-md-6 col-md-offset-3" style="background-color:gray">
            <h2> #{title} </h2>
            <form id="surveyFrm" name="questions" method="post" action="/survey">
                <div ng-repeat="question in questionList">
                    include question.pug
                    hr
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"> Save </button>
                </div>
            </form>
        </div>
    </div>
    
    <script src="components/Survey/surveyController.js"></script>
    <script src="components/Survey/questionDirective.js"></script>