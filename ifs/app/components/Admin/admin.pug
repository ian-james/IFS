extends ../../shared/views/pageLayout.pug

block content
    div.uk-container
        h1.uk-text-center #{title}
        div(uk-alert).uk-alert-danger
            p.errorMessage #{messages.errorMessage}

        div.uk-margin
            form(class='uk-form' method="post" )#uploadForm
                div(uk-grid).uk-grid-small.uk-child-width-1-1
                    div(uk-grid).uk-grid-small.uk-child-width-expand
                        a(href="/admin-add-course").uk-button.uk-button-primary Add Course
                        a(href="/admin-add-event").uk-button.uk-button-primary Add Event
                        a(href="/admin-add-assignment").uk-button.uk-button-primary Add Assignment
                        a(href="/admin-add-assignment-task").uk-button.uk-button-primary Add Task
                        a(href="/admin-add-skill").uk-button.uk-button-primary Add Skill
                    div(uk-grid).uk-grid-small.uk-child-width-expand
                        a(href="/admin-remove-course").uk-button.uk-button-danger Remove Course
                        a(href="/admin-remove-event").uk-button.uk-button-danger Remove Event
                        a(href="/admin-remove-assignment").uk-button.uk-button-danger Remove Assignment
                        a(href="/admin-remove-assignment-task").uk-button.uk-button-danger Remove Task
                        a(href="/admin-remove-skill").uk-button.uk-button-danger Remove Skill

        div.uk-margin
            if !stats
                p.uk-text-lead
                    | No statistics to show!
            else
                table.uk-table
                    caption IFS Summary Stats
                    thead
                        tr
                            th Statistics
                            th Value
                    tbody
                        tr
                            td Total Students
                            td= stats.totalStudents
                        tr
                            td Students Online This week
                            td= stats.studentsOnlineThisWeek
                        tr
                            td Total Weekly Submissions
                            td= stats.weeklySubmissions
                        if stats.disciplineType
                            if typeof(stats.disciplineType) == "string"
                                tr
                                    td= stats.disciplineType + " users"
                                    td= stats.countDiscipline
                            else
                                each s, index in stats.disciplineType
                                    tr
                                        td= s.disciplineType + " users"
                                        td= s.countDiscipline
